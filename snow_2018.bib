	Eissn = {{1879-0704}},
	Issn = {{0034-4257}},
	Journal = {{REMOTE SENSING OF ENVIRONMENT}},
	Month = {{SEP 15}},
	Pages = {{242-254}},
	Title = {{The influence of snow microstructure on dual-frequency radar measurements in a tundra environment}},
	Unique-Id = {{ISI:000440776000019}},
